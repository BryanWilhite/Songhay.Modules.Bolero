{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet build [Solution]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Modules.Bolero.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet build [Solution, Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Modules.Bolero.sln",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet build [Songhay.Modules.Bolero]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Modules.Bolero/Songhay.Modules.Bolero.fsproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet build [Songhay.Modules.Bolero, Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Modules.Bolero/Songhay.Modules.Bolero.fsproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet pack [Songhay.Modules.Bolero, Debug]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "pack",
                "${workspaceFolder}/Songhay.Modules.Bolero/Songhay.Modules.Bolero.fsproj",
                "--configuration",
                "Debug",
                "-p:NuspecFile=${workspaceFolder}/Songhay.Modules.Bolero/Songhay.Modules.Bolero.nuspec",
                "-p:NuspecBasePath=${workspaceFolder}/Songhay.Modules.Bolero",
                "--output",
                "${workspaceFolder}/Songhay.Modules.Bolero",
                "--verbosity",
                "normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet build [Songhay.Modules.Bolero.Tests]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Modules.Bolero.Tests/Songhay.Modules.Bolero.Tests.fsproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet test [Songhay.Modules.Bolero.Tests]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/Songhay.Modules.Bolero.Tests/Songhay.Modules.Bolero.Tests.fsproj",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/TestResults",
                "--verbosity:normal",
                "/p:CollectCoverage=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet build [Songhay.Modules.Bolero.Tests, Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Songhay.Modules.Bolero.Tests/Songhay.Modules.Bolero.Tests.fsproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet test [Songhay.Modules.Bolero.Tests, filtered by selected text]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/Songhay.Modules.Bolero.Tests/Songhay.Modules.Bolero.Tests.fsproj",
                "--filter:${selectedText}",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/TestResults",
                "--verbosity:normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet build [Statiq.Docs.Shell, Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Statiq.Docs.Shell/Statiq.Docs.Shell.fsproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet Statiq [Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "${workspaceFolder}/Statiq.Docs.Shell/bin/Release/net8.0/Statiq.Docs.Shell.dll",
                "--configuration",
                "Release",
                "--",
                "--root",
                "${workspaceFolder}/Statiq.Docs.Shell/bin/Release/net8.0/",
                "--log-level",
                "Information",
                "--log-file",
                "${workspaceFolder}/Statiq.Docs.Shell/statiq-"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Statiq.Docs.Shell/bin/Release/net8.0/"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "git [Statiq Theme Docable]",
            "command": "git",
            "type": "shell",
            "args": [
                "submodule",
                "add",
                "--force",
                "git@github.com:statiqdev/Docable.git",
                "${workspaceFolder}/Statiq.Docs.Shell/bin/Release/net8.0/theme/"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Statiq.Docs.Shell/bin/Release/net8.0/"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Statiq: add .nojekyll file for GitHub",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "linux": {
                "command": "touch",
                "args": [
                    ".nojekyll"
                ]
            },
            "windows": {
                "command": "New-Item",
                "args": [
                    "-ItemType",
                    "file",
                    ".nojekyll"
                ]
            },
            "problemMatcher": []
        }
    ]
}