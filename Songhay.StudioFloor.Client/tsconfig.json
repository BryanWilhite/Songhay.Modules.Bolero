{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "lib": [
            "ES2019",
            "dom",
            "dom.iterable"
        ],
        "moduleResolution": "node",

        "baseUrl": "./",
        "outDir": "./src/js",
        "typeRoots": [
            "node_modules/@types"
        ],

        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "downlevelIteration": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "inlineSources": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "src/js/**",
        "**/*.spec.*",
        "**/__tests__/*"
    ]
}
